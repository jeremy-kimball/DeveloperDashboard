@{
    var weather = ViewBag.Weather as WeatherApiResponse;
}
@if(weather != null)
{
    <p>@weather.ResolvedAddress - @weather.Days[0].Temp&#176;F</p>
    <ul>
        <li>@weather.Days[1].GetDay() - @weather.Days[1].Temp&#176;F</li>
        <li>@weather.Days[2].GetDay() - @weather.Days[2].Temp&#176;F</li>
        <li>@weather.Days[3].GetDay() - @weather.Days[3].Temp&#176;F</li>
    </ul>
}
