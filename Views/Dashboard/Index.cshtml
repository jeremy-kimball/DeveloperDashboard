@model IEnumerable<Dashboard>
@using Microsoft.AspNetCore.Identity
@using DeveloperDashboard.Models
@inject UserManager<ApplicationUser> UserManager

<h1 style="text-align:center;">Available Dashboards</h1>
<hr></hr>
<style>
    #buttonCreate {
        position: fixed;
        bottom: 5em;
        right: 1em;
    }
</style>
<ul>
@foreach(var dashboard in Model)
{
        <li><a href="/Dashboard/@dashboard.Id">Dashboard: @dashboard.Name</a></li>
}
</ul>

<div id="buttonCreate">
    <form action="/Dashboard/New" method="get">
        <button type="submit" class="btn btn-success myButton">Create Dashboard</button>
    </form>
</div>