

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Dashboard Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="" required />
    </div>
    <div class="form-group">
        <label for="selectedWidgetIds">Select Widgets</label>
        <select id="selectedWidgetIds" name="selectedWidgetIds" multiple class="form-control">
            @foreach (var widget in ViewBag.widgetBag)
            {
                <option value="@widget.Value">@widget.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create Dashboard</button>
</form>